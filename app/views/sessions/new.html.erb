<div class="row">
<div class="col s10 offset-s3">
<div class="container">
  <h4>Log in</h4>
  <%= form_for(:session, url: login_path, html: { class: "login_form" }) do |f|%>
    <div class="row">
      <div class="input-field col s6">
        <%= f.label :email, :class => "active" %>
        <%= f.text_field :email%>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <%= f.label :password, :class => "active" %>
        <%= f.password_field :password%>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6 offset-s2">
        <%= f.submit "Log in", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>
</div>
</div>
