<div class="row container full-height scroll-bar">
  <div class="col s10 offset-s1">
    <div class="container">
      <h4>SignUp</h4>
      <%= form_for @user, :html => { :multipart => true, :class => "col s12" } do |f| %>
        <div class="row">
          <div class="input-field col s10">
            <%=f.text_field :name, :class => "validate" %>
            <%= f.label :name, :class => "active"%>
            <div class = "error"><%= @user.errors.messages[:name][0] %></div>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s10">
            <%=f.email_field :email, :class => "validate" %>
            <%= f.label :email, :class => "active", "data-error" => "#{@user.errors.messages['email']}" %>
            <div class = "error"><%= @user.errors.messages[:email][0] %></div>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s10">
            <%=f.password_field :password, :class => "validate" %>
            <%= f.label :password %>
            <div class = "error"><%= @user.errors.messages[:password][0] %></div>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s10">
            <%=f.password_field :password_confirmation, :class => "validate" %>
            <%= f.label :password_confirmation %>
            <div class = "error"><%= @user.errors.messages[:password_confirmation][0] %></div>
          </div>
        </div>
        <div class="row">
          <div class="col s6 offset-s1">
            <%= f.submit "Sign up",  class: "btn btn-success" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
